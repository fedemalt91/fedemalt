@model BlogViajes.Web.Models.GuiaListModel
@{
    ViewBag.Title = "Viajero X Definición : Guias sobre " + TempData["NombreCategoria"];
    ViewBag.description = "Una guia de los mejores lugares y los mas importantes a tener en cuenta cuando esten de vaije por " + TempData["NombreCategoria"];
    ViewBag.Keywords = "Viajes, Viajar, Viajando, Ciudad, Mundo, Atracciones, Lugares, " + TempData["NombreCategoria"];
    }
@section meta {
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="ViewBag.Keywords" />
    <link rel="canonical" href="@Url.Action(Model.ActionToGo, "Articulos", new RouteValueDictionary(new { Page = Model.ActualPage, CategoryId = Model.City}), Uri.UriSchemeHttps, System.Configuration.ConfigurationManager.AppSettings["HostName"])" />
}
<section id="content_area">
			<div class="clearfix wrapper main_content_area">
			
				<div class="clearfix main_content floatleft">
				
					@Html.Partial("_Content", Model.ContentList)
					
					<div class="pagination">
						<nav>
							<ul>
                            <li><a href="/Articulos/@Model.ActionToGo/1/@Model.City"> << </a></li>
                            @for (int i = (Model.ActualPage - 3); i <= (Model.ActualPage + 3); i++)
                            {
                                if (i > 0 && i <= Model.AmtPages)
                                {
                                    <li><a href="/Articulos/@Model.ActionToGo/@i/@Model.City"> @i </a></li>
                                }

                            }								
								<li><a href="/Articulos/@Model.ActionToGo/@Model.AmtPages/@Model.City"> >> </a></li>
							</ul>
						</nav>
					</div>
				</div>
				<div class="clearfix sidebar_container floatright">
				
					@Html.Partial("_Subscribe")
					<div class="clearfix sidebar">
						@Html.Partial("_Featured", Model.FeatureList)
						@Html.Partial("_Categories", Model.Categories)
						@Html.Partial("_Recent", Model.RecentList)
					</div>
				</div>
			</div>
		</section>
