@model BlogViajes.Web.Models.ContactoModel
@{
    ViewBag.Title = "Contacto: Viajero X definición";
}
@section meta {
    <meta name="description" content="Página de contacto Viajero X Definición" />
    <meta name="keywords" content="Contacto" />
     <link rel="canonical" href="@Url.Action("Contacto", "Servicio", null, Uri.UriSchemeHttps, System.Configuration.ConfigurationManager.AppSettings["HostName"])" />
}
<section id="content_area">
			<div class="clearfix wrapper main_content_area">
			<div class="clearfix main_content floatleft">
				<div class="clearfix wrapper main_content_area">
    <div class="clearfix main_content floatleft">
        <div class="clearfix content">
            <div class="content_title">
                <h2>
                    Formulario de contacto</h2>
            </div>
            <div class="single_work_page clearfix">
                 <div class="single_work_page_content">
                  @using (Html.BeginForm())
                  {
    @Html.ValidationSummary(true)

    <fieldset>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserEmail)
            @Html.ValidationMessageFor(model => model.UserEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Texto)
        </div>
        <div class="editor-field">
        <textarea id="Texto" name="Texto" style="width:70%" data-val-required="El campo es obligatorio." data-val="true"></textarea>
         @Html.ValidationMessageFor(model => model.Texto)
        </div>

        <p>
            <input type="submit" value="Enviar" />
        </p>
    </fieldset>
                  }
                </div>
            </div>
           
        </div>
    </div>
</div>
					
					
					
				</div>
				<div class="clearfix sidebar_container floatright">
				
					@Html.Partial("_Subscribe")
					<div class="clearfix sidebar">
						
					</div>
				</div>
			</div>
		</section>
